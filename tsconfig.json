{
  "include": [
    "env.d.ts",
    "src/**/*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "lib": [
      "es2022",
      "DOM"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}